@model List<Perspektiva.Areas.Admin.Models.PerspectivaDataModel>

@{
    ViewData["Title"] = "Index";
}

<h1>My Perspectives</h1>


<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Untitled</title>

    <link rel="stylesheet" href="~/css/mdb.min.css">
    <link rel="stylesheet" href="~/css/mdb.min.css.map">
    <link rel="stylesheet" href="~/css/rainbow_button.css">
    <link rel="stylesheet" href="~/css/MyPerspectives.css">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/tilt.js/1.2.1/tilt.jquery.min.js"></script>


</head>


<div class="d-grid gap-2 d-md-block">
    <button class="btn btn-secondary" type="button" onclick="location.href='@Url.Action("Create","AdminPerspective")'"> Create</button>
    <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Index","Home", new { Area = "" })'"> Back</button>
</div>
<body>

    <div class="container">


        <div class="row row-cols-1 row-cols-md-4 g-8">
            <!-- enota -->
            @foreach (var item in Model)
            {
                if (Model.First() == item)
                {

                    <div class="col p-3">
                        <div class="card js-tilt">
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.PerspectivePictureByte)" class="card-img-top img-not-found-yet" alt="ALT" />
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">

                                    <div class="d-flex align-items-center">

                                        <div class="ms-3" style="word-wrap: break-word">
                                            <h5 class="card-title" style="word-wrap: break-word">@item.Title</h5>
                                            <p class="card-text" style="word-wrap: break-word">
                                                @item.Description
                                            </p>
                                        </div>
                                    </div>
                                    <span class="badge rounded-pill badge-danger">Not Found Yet!</span>
                                </div>
                            </div>
                            <div class="card-footer border-0 bg-light p-2 d-flex justify-content-around">
                                <a class="btn btn-link m-0 text-reset"
                           href="#"
                           role="button"
                           data-ripple-color="primary">
                                    No score<i class="fas fa-envelope ms-2"></i>
                                </a>
                                <a class="btn btn-link m-0 text-reset rainbow rainbow-5 "
                           href=@Url.Action(action: "SubmitGuess", controller: "Perspective", new { id = item.ID })
                           role="button"
                           data-ripple-color="primary">
                                    Submit guess!<i class="fas fa-phone ms-2"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                }


                <div class="col p-3">
                    <div class="card js-tilt">
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.PerspectivePictureByte)" class="card-img-top" alt="ALT" />
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">

                                <div class="d-flex align-items-center">

                                    <div class="ms-3" style="word-wrap: break-word">
                                        <h5 class="card-title" style="word-wrap: break-word">@item.Title</h5>
                                        <p class="card-text" style="word-wrap: break-word">
                                            @item.Description
                                        </p>
                                    </div>
                                </div>
                                <span class="badge rounded-pill badge-success">Found!</span>
                            </div>
                        </div>
                        <div class="card-footer border-0 bg-light p-2 d-flex justify-content-around">
                            <a class="btn btn-link m-0 text-reset"
                           href="#"
                           role="button"
                           data-ripple-color="primary">
                                90/100<i class="fas fa-envelope ms-2"></i>
                            </a>
                            <a class="btn btn-link m-0 text-reset rainbow rainbow-5 "
                           href=@Url.Action(action: "Edit", controller: "Perspective", new { id = item.ID })
                           role="button"
                           data-ripple-color="primary">
                                Submit guess!<i class="fas fa-phone ms-2"></i>
                            </a>
                        </div>
                    </div>
                </div>



            }

        </div>


    </div>


    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
        <script>
            $('.js-tilt').tilt({
                scale: 1.00,
                perspective: 500
            })


        </script>


    </body>

